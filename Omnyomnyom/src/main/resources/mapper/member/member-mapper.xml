<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">

<insert id="insertMember">
	insert into
		tb_member
	values(
		#{memberId},
		#{memberPwd},
		#{memberNick},
		#{memberName},
		#{phone},
		#{email},
		#{ssn},
		default,
		default,
		#{address}
	)
</insert>

<select id="selectMember" resultType="member">
	select
		*
	from
		tb_member
	where
	<if test="memberId != null">
		member_id = #{memberId}
	</if> 
	<if test="memberNick != null">
		member_nick = #{memberNick}
	</if>
</select>

<select id="selectOne" resultType="member">
	select
		*
	from
		tb_member
	where
		member_id = #{memberId}
</select>

<select id="selectMemberList" resultType="member">
	select
		*
	from
		tb_member
	order by 
		regdate
</select>

<select id="selectMemberListCnt" resultType="String">
	select
		count(*)
	from
		tb_member
</select>

<update id="updateDingdong">
	update
		tb_dingdong
	set
		dingdong_read = 0
	where
		dingdong_no = #{dingdongNo}
</update>

<insert id="insertDingdong">
	insert into
		tb_dingdong
	values{
		#{dongdongNo},
		#{memberId},
		#{dingdongContent},
		#{dingdongLink},
		#{dingdongRead},
		#{regDate}
	}
</insert>

<select id="dingdongList" resultType="dingdong">
	select
		*
	from
		tb_dingdong
</select>

<select id="selectDingdongListCnt" resultType="String">
	select
		count(*)
	from
		tb_dingdong
</select>

<select id="dingdongListTest" resultType="dingdong">
	select
		*
	from
		tb_dingdong
</select>

</mapper>